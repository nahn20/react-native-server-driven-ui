{
	"compilerOptions": {
		"outDir": "build",
		"rootDir": "src",
		"lib": ["ESNext"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"moduleDetection": "force",
		"allowImportingTsExtensions": false,
		"noEmit": false,
		"composite": true,
		"strict": true,
		"downlevelIteration": true,
		"skipLibCheck": true,
		"jsx": "preserve",
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"incremental": true
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["**/*.js", "**/*.d.ts", "build"]
}
